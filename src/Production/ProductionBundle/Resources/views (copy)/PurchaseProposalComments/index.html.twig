{% extends '::base.html.twig' %}

{% block body -%}
<h1>PurchaseProposalComments list</h1>

<table class="records_list">
  <thead>
    <tr>
      <th>Id</th>
      <th>Comments</th>
      <th>PurchaseProposal</th>
      <th>Createdat</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
        {% for entity in entities %}
      <tr>
        <td><a href="{{ path('purchaseproposalcomments_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.comments }}</td>
        <td>{{ entity.purchaseProposal }}</td>
        <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
        <td>
          <ul>
            <li>
              <a href="{{ path('purchaseproposalcomments_show', { 'id': entity.id }) }}">show</a>
            </li>
            <li>
              <a href="{{ path('purchaseproposalcomments_edit', { 'id': entity.id }) }}">edit</a>
            </li>
          </ul>
        </td>
      </tr>
        {% endfor %}
    </tbody>
  </table>

  <ul>
    <li>
      <a href="{{ path('purchaseproposalcomments_new') }}">
        Create a new entry
      </a>
    </li>
  </ul>
    {% endblock %}
